<!-- Language Switcher Component -->
<div class="language-switcher">
  <%= form_with url: switch_locale_path(:en), method: :post, class: "language-form" do %>
    <button type="submit" class="flag-button <%= 'active' if I18n.locale == :en %>" title="English">
      <span class="flag-icon">🇺🇸</span>
    </button>
  <% end %>
  
  <%= form_with url: switch_locale_path(:es), method: :post, class: "language-form" do %>
    <button type="submit" class="flag-button <%= 'active' if I18n.locale == :es %>" title="Español">
      <span class="flag-icon">🇦🇷</span>
    </button>
  <% end %>
</div>
