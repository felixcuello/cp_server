<%= form_with model: [:admin, contest], local: true, data: { turbo: false } do |f| %>
  <% if contest.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(contest.errors.count, "error") %> prohibited this contest from being saved:</h3>
      <ul>
        <% contest.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Contest Name", class: "form-label" %>
    <%= f.text_field :name, class: "form-input", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description", class: "form-label" %>
    <%= f.text_area :description, class: "form-textarea", rows: 5 %>
  </div>

  <div class="form-group">
    <%= f.label :rules, "Rules", class: "form-label" %>
    <%= f.text_area :rules, class: "form-textarea", rows: 8, 
        placeholder: "Enter contest rules here..." %>
  </div>

  <div class="form-row">
    <div class="form-group">
      <%= f.label :start_time, "Start Time", class: "form-label" %>
      <%= f.datetime_local_field :start_time, class: "form-input", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :end_time, "End Time", class: "form-label" %>
      <%= f.datetime_local_field :end_time, class: "form-input", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :penalty_minutes, "Penalty (minutes per incorrect submission)", class: "form-label" %>
    <%= f.number_field :penalty_minutes, class: "form-input", min: 0, value: contest.penalty_minutes || 0, required: true %>
  </div>

  <div class="form-actions">
    <%= f.submit contest.new_record? ? "Create Contest" : "Update Contest", class: "btn-primary" %>
    <%= link_to "Cancel", contest.new_record? ? admin_contests_path : admin_contest_path(contest), class: "btn-secondary" %>
  </div>
<% end %>
